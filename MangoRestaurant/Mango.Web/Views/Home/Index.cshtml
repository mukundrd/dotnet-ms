@model IEnumerable<Mango.Contracts.Dtos.ProductDto>
@{
    ViewData["Title"] = "Restaurant";
}
<form>
    <div class="container row">

        @foreach (var prod in Model) {
        <div class="col-4 ">
            <div class="p-0 my-3 border">
                <div class="card">
                    <img src="@prod.ImageUrl" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title text-success">@prod.Name</h3>
                        <span class="badge badge-light mb-2 ">@prod.CategoryName</span>
                        <p class="card-text">@Html.Raw(prod.Description)</p>
                        <div class="row">
                            <div class="col pt-1">
                                    <span style="font-size:23px;">@string.Format("{0:c}", @prod.Price)</span>
                            </div>
                            <div class="col">
                                <a asp-action="Details" asp-route-productId="@prod.ProductId" class="btn btn-success form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</form>
